

@model ProjectBanking.Models.FixedDeposit

@{
    ViewData["Title"] = "Fixed";
}

<h1>Fixed</h1>
<div>
    <p>ฝากประจำ</p>

    <form asp-controller="Home" asp-action="CalFixed" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <span>เงินฝากต้น: </span>
            <input class="text-box single-line input-validation-error" step="0.01" data-val="true" data-val-number=""
                   data-val-range="กรุณาใส่เงินขั้นต่ำ500บาท" data-val-range-max="1.7976931348623157E+308" data-val-range-min="500"
                   data-val-required="กรุณาใส่เงินฝาก" id="Fmoney" name="Fmoney" type="number" value="" aria-describedby="Fmoney-error"
                   aria-invalid="true"><br />
            <span asp-validation-for="Fmoney" class="text-danger"></span>
        </div>
        <div class="form-group">
            <span>ระยะฝากต่อเดือน : </span>
            <input asp-for="Fday" id="Fday" type="radio" name="Fday" value="3" /><span>  3  </span>
            <input asp-for="Fday" id="Fday" type="radio" name="Fday" value="6" /><span>  6  </span>
            <input asp-for="Fday" id="Fday" type="radio" name="Fday" value="12" /><span>  12  </span><br />
            <span asp-validation-for="Fday" class="text-danger"></span>
        </div>
        <div class="form-group">
            <span>เงินฝากต่อเดือน : </span>
            <input class="text-box single-line input-validation-error" step="0.01" data-val="true" data-val-number=""
                   data-val-range="กรุณาใส่เงินขั้นต่ำ500บาท" data-val-range-max="1.7976931348623157E+308" data-val-range-min="500"
                   data-val-required="กรุณาใส่เงินฝาก" id="Fmonth" name="Fmonth" type="number" value="" aria-describedby="Fmonth-error"
                   aria-invalid="true"><br />
            <span asp-validation-for="Fmonth" class="text-danger"></span>
        </div>
            <input id="cal2" type="submit" value="Calculation" /><br />
            <hr />
            <div asp-action="Fixed">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FBankName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FInterestRate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Fday)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Fmoney)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Fmonth)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FRate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FTotal)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                กรุงศรี
                            </td>
                            <td>
                                1.1
                            </td>
                            <td>
                                @ViewBag.Fterm
                            </td>
                            <td>
                                @ViewBag.Earlyfixsavingb3
                            </td>
                            <td>
                                @ViewBag.Summoneyb3
                            </td>
                            <td>
                                @ViewBag.Ratesfixavingb3
                            </td>
                            <td>
                                @ViewBag.Totalfixsavingb3
                            </td>
                        </tr>
                        <tr>
                            <td>
                                กสิกรไทย
                            </td>
                            <td>
                                0.865
                            </td>
                            <td>
                                @ViewBag.Fterm
                            </td>
                            <td>
                                @ViewBag.Earlyfixsavingb2
                            </td>
                            <td>
                                @ViewBag.Summoneyb2
                            </td>
                            <td>
                                @ViewBag.Ratesfixavingb2
                            </td>
                            <td>
                                @ViewBag.Totalfixsavingb2
                            </td>
                        </tr>
                        <tr>
                            <td>
                                ไทยพาณิชย์
                            </td>
                            <td>
                                0.375
                            </td>
                            <td>
                                @ViewBag.Fterm
                            </td>
                            <td>
                                @ViewBag.Earlyfixsavingb1
                            </td>
                            <td>
                                @ViewBag.Summoneyb1
                            </td>
                            <td>
                                @ViewBag.Ratesfixavingb1
                            </td>
                            <td>
                                @ViewBag.Totalfixsavingb1
                            </td>
                        </tr>
                    </tbody>
                </table>
                <hr />
            </div>

    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}