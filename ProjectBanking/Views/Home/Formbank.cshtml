@model ProjectBanking.Models.Customer

@{
    ViewData["Title"] = "Formbank";
}
<link rel="stylesheet" href="~/css/StyleSheet.css" />
<body style="background-color:#F9F4FB">

    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="index.html"> <img src="~/img/semicolon-01.png" alt="logo" width="140px" height="40px"> </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="menu_icon"><i class="fas fa-bars"></i></span>
            </button>

            <div class="collapse navbar-collapse main-menu-item" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Home1">หน้าหลัก</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="..." id="navbarDropdown_1"
                           role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            คำนวณดอกเบี้ย
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown_1">
                            <a class="dropdown-item" asp-action="Save">บัญชีออมทรัพย์</a>
                            <a class="dropdown-item" asp-action="Fixed">บัญชีฝากประจำ</a>

                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="..." id="navbarDropdown_3"
                           role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            ธนาคาร
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown_2">
                            <a class="dropdown-item" asp-action="Formbank">
                                ธนาคารไทยพาณิชย์
                            </a>
                            <a class="dropdown-item" asp-action="Formbank">
                                ธนาคารกสิกรไทย
                            </a>
                            <a class="dropdown-item" asp-action="Formbank">
                                ธนาคารกรุงศรีอยุธยา
                            </a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Home1">ข้อมูล</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://localhost:44398/Home/Home1#Howto">เครื่องมือ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Home1">ติดต่อ</a>
                    </li>
                </ul>
            </div>

        </nav>
    </div>
<section>
    <div class="container">
        <div class="row justify-content-center">
            <h4 class="text-center">กรอกข้อมูลเพื่อสมัครการลงทุน</h4>
           
        </div>
        <br /><br />
        <div class="row justify-content-center mycol">
            <h5>@ViewBag.bank</h5>
            
            <div class="cardinvest">
                
                    <form asp-action="Formbank" method="post" style="" enctype="multipart/form-data" asp-controller="Home">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label id="Select" name="Select" asp-for="BankSelect" class="control-label" style="margin-left:50px; margin-top:5px;">ประเภทบัญชี </label>

                            <br /> <br /><br />
                            <select asp-for="BankSelect" style="padding-top: 5px;padding-bottom: 5px;" class="select-selected">
                                <option style="border-radius:.7rem;" value="ออมทรัพย์">ออมทรัพย์</option>
                                <option style="border-radius:.7rem;" value="ฝากประจำ">ฝากประจำ</option>
                            </select>
                        </div>
                    </form>
                    <div class="form-group">
                        <label asp-for="CustomerBN" class="form-id">ชื่อบัญชี</label>
                        <input asp-for="CustomerBN" class="input" placeholder="ชื่อบัญชี" />
                        <span asp-validation-for="CustomerBN" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerName" class="form-id" style="">ชื่อ-สกุล</label>
                        <input placeholder="ชื่อ-สกุล" asp-for="CustomerName" class="input" style="" />
                        <span asp-validation-for="CustomerName" class="text-danger" style=""></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerID" class="form-id">เลขบัตรประชาชน</label>
                        <input asp-for="CustomerID" class="input" style="" placeholder="x xxxx xxxxx xx x" />
                        <span asp-validation-for="CustomerID" class="text-danger" style=""></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CustomerAddress" class="form-id" style="">ที่อยู่</label>
                        <input placeholder="ที่อยู่" asp-for="CustomerAddress" class="input" style="" />
                        <span asp-validation-for="CustomerAddress" class="text-danger" style=""></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerPhone" class="form-id" style="">เบอร์โทรศัพท์</label>
                        <input placeholder="+66xxxxxxxx" asp-for="CustomerPhone" class="input" style="" />
                        <span asp-validation-for="CustomerPhone" class="text-danger" style=""></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerMoney" class="form-id">จำนวนเงินฝาก</label>
                        <input type="number" asp-for="CustomerMoney" class="input" placeholder="จำนวนเงินฝาก" />
                        <span asp-validation-for="CustomerMoney" class="text-danger" style=";"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-id" style="">วันที่ฝาก</label>
                        <input class="input date-picker text-box single-line" data-val="true" data-val-required="The CustomerDate field is required." id="CustomerDate" name="CustomerDate" type="date" value="">
                    </div>
                    <div class="custom-file">
                        <input class="" type="file" name="file" />
                        <label class="file-box ">Browse...</label>
                    </div>
                    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
                    <div class="form-group">
                        <input class="submit" type="submit" value="ยืนยัน" />
                    </div>
                </div>
            </div>
</div>
    
</section>
    <br /><br /><br />
    
    @*<div>
            <a asp-action="Index">Back to List</a>
        </div>*@

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

    <script type="text/javascript">
        $(function () {
            $(".date-picker").datepicker({
                dateFormat: 'dd-MM-yy',
                changeMonth: true,
                changeYear: true,
                minDate: new Date(1, 1, 2019),
                maxDate: new Date(1, 1, 2022),
                ShowOn: "both",
                buttonText: "<i class='fa fa-calendar'>"
            });

        });
    </script>

</body>