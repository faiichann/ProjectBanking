@model ProjectBanking.Models.Customer

@{
    ViewData["Title"] = "Formbank";
}
<body style="background-color:#F9F4FB">

    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="index.html"> <img src="~/img/semicolon-01.png" alt="logo" width="140px" height="40px"> </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="menu_icon"><i class="fas fa-bars"></i></span>
            </button>

            <div class="collapse navbar-collapse main-menu-item" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="index.html">หน้าหลัก</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="..." id="navbarDropdown_1"
                           role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            คำนวณดอกเบี้ย
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown_1">
                            <a class="dropdown-item" asp-action="Save">บัญชีออมทรัพย์</a>
                            <a class="dropdown-item" asp-action="Fixed">บัญชีฝากประจำ</a>

                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="..." id="navbarDropdown_3"
                           role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            ธนาคาร
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown_2">
                            <a class="dropdown-item" asp-action="Formbank">
                                ธนาคารไทยพาณิชย์
                            </a>
                            <a class="dropdown-item" asp-action="Formbank">
                                ธนาคารกสิกรไทย
                            </a>
                            <a class="dropdown-item" asp-action="Formbank">
                                ธนาคารกรุงศรีอยุธยา
                            </a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Home1">ข้อมูล</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://localhost:44398/Home/Home1#Howto">เครื่องมือ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Home1">ติดต่อ</a>
                    </li>
                </ul>
            </div>

        </nav>
    </div>
    <h4 class="text-center">กรอกข้อมูลเพื่อสมัครการลงทุน</h4>
    <h5>@ViewBag.bank</h5>
    <hr />
    <div class="card" style="        width: 30%;
        margin-left: 525px;
        border-radius: .5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        height: auto;
        border: 1px solid transparent;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;">
        <div class="card-body" style=" background-color:white;
        border-radius: .5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        height: auto;
        width:450px;
        background-color:aqua;">
            <div class="row" style="">
                <div class="col-md-4">
                    <form asp-action="Formbank" method="post" style="" enctype="multipart/form-data" asp-controller="Home">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label id="Select" name="Select" asp-for="BankSelect" class="control-label" style="margin-left:-80px;">ประเภทบัญชี </label>
                            <br />
                            <select asp-for="BankSelect" style="padding-top: 5px;padding-bottom: 5px;margin-left: -80px;" class="select-selected">
                                <option value="ออมทรัพย์">ออมทรัพย์</option>
                                <option value="ฝากประจำ">ฝากประจำ</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="CustomerID" class="control-label"  >เลขบัตรประชาชน</label>
                            <input asp-for="CustomerID" class="form-box" style="margin-left: 20px;padding-right: 180px;border-radius: .5rem;border: 0px;background-color: #E0E0E4;" placeholder="x xxxx xxxxx xx x" />
                            <span asp-validation-for="CustomerID" class="text-danger" style="margin-left:-80px;"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CustomerName" class="control-label" style="margin-left:-80px;">ชื่อ-สกุล</label>
                            <input placeholder="ชื่อ-สกุล" asp-for="CustomerName" class="form-control" style="margin-left:-80px;" />
                            <span asp-validation-for="CustomerName" class="text-danger" style="margin-left:-80px;"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CustomerAddress" class="control-label" style="margin-left:-80px;">ที่อยู่</label>
                            <input placeholder="ที่อยู่" asp-for="CustomerAddress" class="form-control" style="margin-left:-80px;" />
                            <span asp-validation-for="CustomerAddress" class="text-danger" style="margin-left:-80px;"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CustomerPhone" class="control-label" style="margin-left:-80px;">เบอร์โทรศัพท์</label>
                            <input placeholder="+66xxxxxxxx" asp-for="CustomerPhone" class="form-control" style="margin-left:-80px;" />
                            <span asp-validation-for="CustomerPhone" class="text-danger" style="margin-left:-80px;"></span>
                        </div>

                        <div class="form-group">
                            <input class="form-control date-picker text-box single-line" data-val="true" data-val-required="The CustomerDate field is required." id="CustomerDate" name="CustomerDate" type="date" value="" style="margin-left:-80px;">
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="ยืนยัน" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

    <script type="text/javascript">
        $(function () {
            $(".date-picker").datepicker({
                dateFormat: 'dd-MM-yy',
                changeMonth: true,
                changeYear: true,
                minDate: new Date(1, 1, 2019),
                maxDate: new Date(1, 1, 2022),
                ShowOn: "both",
                buttonText: "<i class='fa fa-calendar'>"
            });

        });
    </script>

</body>