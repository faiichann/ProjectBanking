@model ProjectBanking.Models.Customer

@{
    ViewData["Title"] = "Formbank";
}

<h1>Kbank</h1>

<h4>กรอกฟอร์มลงทุนกับธนาคาร</h4>
<h5>@ViewBag.bank</h5>
<hr />
<div class="card">
    <div class="card-body">
        <div class="row" style="margin-left:-100px">
            <div class="col-md-4">

                <form asp-action="Formbank" method="post" style="margin-left:200px;" enctype="multipart/form-data" asp-controller="Home">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label id="Select" name="Select" asp-for="BankSelect" class="control-label">ประเภทบัญชี </label>
                        <br />
                        <select asp-for="BankSelect" style="padding-right: 208px;background-color: #ACB3FE;" class="select-selected">
                            <option value="ออมทรัพย์">ออมทรัพย์</option>
                            <option value="ฝากประจำ">ฝากประจำ</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerID" class="control-label">ชื่อบัญชี</label>
                        <input placeholder="ชื่อบัญชี" asp-for="CustomerID" class="form-control" />
                        <span asp-validation-for="CustomerID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerName" class="control-label">ชื่อ-สกุล</label>
                        <input placeholder="ชื่อ-สกุล" asp-for="CustomerName" class="form-control"/>
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerAddress" class="control-label">ที่อยู่</label>
                        <input placeholder="ที่อยู่" asp-for="CustomerAddress" class="form-control" />
                        <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerPhone" class="control-label">เบอร์โทรศัพท์</label>
                        <input placeholder="+66xxxxxxxx" asp-for="CustomerPhone" class="form-control" />
                        <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                    </div>
                    @Html.EditorFor(model => model.CustomerDate, new { htmlAttributes = new { @class = "form-control date-picker" } })

                    <br />
                    <div class="form-group">
                        <input type="submit" value="Create" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">
    $(function () {
        $(".date-picker").datepicker({
            dateFormat: 'dd-MM-yy',
            changeMonth: true,
            changeYear: true,
            minDate: new Date(1, 1, 2019),
            maxDate: new Date(1, 1, 2022),
            ShowOn: "both",
            buttonText: "<i class='fa fa-calendar'>"
        });

    });
</script>