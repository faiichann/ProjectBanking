@model ProjectBanking.Models.Customer

@{
    ViewData["Title"] = "Formbank";
}
<section>
    <div class="container">
        <div class="row justify-content-center" style="margin-top:20px;">
            <h4 class="text-center">กรอกข้อมูลเพื่อสมัครการลงทุน</h4>
        </div>
        <div class="row justify-content-center" style="margin-top:20px;">
            <form asp-action="Formbank" method="post" enctype="multipart/form-data" asp-controller="Home">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label id="Select" name="Select" asp-for="BankSelect">Select choice : </label>
                    <select asp-for="BankSelect">
                        <option value="ออมทรัพย์">ออมทรัพย์</option>
                        <option value="ฝากประจำ">ฝากประจำ</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerBN" class="control-label"></label>
                    <input asp-for="CustomerBN" class="form-control" />
                    <span asp-validation-for="CustomerBN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerName" class="control-label"></label>
                    <input asp-for="CustomerName" class="form-control" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerID" class="control-label"></label>
                    <input type="number" asp-for="CustomerID" class="form-control" />
                    <span asp-validation-for="CustomerID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerAddress" class="control-label"></label>
                    <input asp-for="CustomerAddress" class="form-control" />
                    <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerPhone" class="control-label"></label>
                    <input asp-for="CustomerPhone" class="form-control" />
                    <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerMoney" class="control-label"></label>
                    <input type="number" asp-for="CustomerMoney" class="form-control" data-val-number="กรุณาใส่ตัวเลขเท่านั้น" />
                    <span asp-validation-for="CustomerMoney" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.CustomerDate, new { htmlAttributes = new { @class = "form-control datepicker" } })
                </div>
                <br />
                <div class="custom-file">
                    <input class="form-control custom-file-input" type="file" name="file" />
                    <label class="custom-file-label">Browse...</label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">
    $(function () {
        $("#datepicker").datepicker({
            dateFormat: 'd-mm-yy',
            changeMonth: true,
            changeYear: true,
            minDate: new Date(1, 1, 2019),
            maxDate: new Date(1, 1, 2022),
            ShowOn: "both",
            buttonText: "<i class='fa fa-calendar'>"
        });
    });

    $(document).ready(function () {
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next(".custom-file-label").html(fileName);
        })
    });
</script>

