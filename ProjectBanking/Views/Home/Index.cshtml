    <div>
        <input type="submit" name="bank" value="3" />กรอกใบลทุนธนาคารกสิกรไทย
    </div>
</form>

<br />
<hr />
<section class="banner_part">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <div class="banner_slider">
                    <div class="single_banner_slider">
                        <div class="banner_text">
                            <div class="banner_text_iner">
                                <h1 class="textbanner">
                                    ให้เราเป็นผู้ช่วยที่ดีที่สุด <br>
                                    ในการหาธนาคารที่เหมาะกับคุณ <br>
                                    ในการลงทุนครั้งนี้ !
                                </h1>
                                <a href="#Compare" class="btn_1">เริ่มเลย !</a>
                                <div class="sectionpic">
                                    <img src="~/img/Section1.png" width="844">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="bank-section2" id="Compare">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7">
                    <div class="banner_text">
                        <div class="banner_text_iner">
                            <h1 class="textbanner">
                                เปรียบเทียบดอกเบี้ย <br>
                                ครบจบที่นี่ที่เดียว
                            </h1>
                            <p>
                                เพียงเเค่กรอกข้อมูลจำนวนเงินที่ท่านต้องการ <br>
                                จะลงทุนก็สามารถเช็คดอกเบี้ยของแต่ละ <br>
                                ธนาคารได้ในรอบเดียว
                            </p>
                            <a asp-action="choose" class="btn-sec2">เปรียบเทียบดอกเบี้ย</a>
                            <div class="sectionpic2">
                                <img src="~/img/Section2.png">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section>
<div class="bank-section3" >
    <div class="container">
        <div class="row align-items-center">
            <div class="banner_text">
                <div class="banner_text_iner">
                    <h1 class="textbanner">
                        ขั้นตอนการสมัครลงทุน<br>
                        ง่ายกว่าที่คุณคิด
                    </h1>
                    <p>
                        ไม่ต้องเตรียมเอกสารสมัครให้ยุ่งยาก<br>
                        เเค่คุณมีบัตรประชาชนก็สามารถลงทุน<br>
                        กับธนาคารที่สนใจได้เลย
                    </p>
                    <div class="sectionpic3">
                        <img src="~/img/Section3.png">
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
    </section>

<a asp-action="Index">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BankID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BankName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BankAddress)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.BankInterestRate)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.orderRate)
            {
                <tr>
                    <td>
                        @item.BankID
                    </td>
                    <td>
                        @item.BankName
                    </td>
                    <td>
                        @item.BankAddress
                    </td>
                    <td>
                        @item.BankInterestRate
                    </td>
                </tr>
            }
        </tbody>
    </table>
</a>