@model IEnumerable<ProjectBanking.Models.Bank>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<h3>คำนวณดอกเบี้ย</h3>
<div>
    <a asp-action="Save">Saving</a>
</div>
<div>
    <a asp-action="Fixed">FixedSaving</a>
</div>
<br />
<hr />
<h3>ลงทุน</h3>
@*<div>
        <a asp-action="Formbank">FixedSaving</a>
    </div>*@
<form asp-controller="Home" asp-action="Page" method="post">
    <div>
        <input type="submit" name="bank" value="1" />กรอกใบลทุนธนาคารไทยฑาณิชย์
    </div>
    <div>
        <input type="submit" name="bank" value="2" />กรอกใบลทุนธนาคารกรงศรีอยุธยา
