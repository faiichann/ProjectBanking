@model ProjectBanking.Models.Savings

@{
    ViewData["Title"] = "Save";
}

<h1>Save</h1>

<h4>Savings</h4>
<div>
    <p>ฝากออมทรัพย์</p>

    <form asp-controller="Home" asp-action="CalSaving" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <span>เงินฝากต้น: </span><input asp-for="SEarlyDeposit" step="0.01" type="number" name="Smoney" placeholder="ฝากขั้นต่ำ 1,000 บาท"/>
            <span asp-validation-for="SEarlyDeposit" class="text-danger"></span><br />
        </div>
        <div class="form-group">
            <span>ระยะฝาก : </span><input asp-for="STerm" type="number" name="Sday" placeholder="สูงสุด 12 เดือน"/>
            <span asp-validation-for="STerm" class="text-danger"></span><br />
        </div>
        <span>อัตราดอกเบี้ย : </span><input step="0.01" type="number" name="Srate" hidden /><br />

        <input id="cal2" type="submit" value="Calculation" /><br />

        <a asp-action="Save">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.SBankName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SRate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.STerm)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SEarlyDeposit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SInterestRate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.STotal)
                        </th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>
                            กรุงศรี
                        </td>
                        <td>
                            1.1
                        </td>
                        <td>
                            @ViewBag.Sterm
                        </td>
                        <td>
                            @ViewBag.Earlysavingb2
                        </td>
                        <td>
                            @ViewBag.Ratesavingb2
                        </td>
                        <td>
                            @ViewBag.Totalsavingb2
                        </td>
                    </tr>
                    <tr>
                        <td>
                            กสิกรไทย
                        </td>
                        <td>
                            0.865
                        </td>
                        <td>
                            @ViewBag.Sterm
                        </td>
                        <td>
                            @ViewBag.Earlysavingb3
                        </td>
                        <td>
                            @ViewBag.Ratesavingb3
                        </td>
                        <td>
                            @ViewBag.Totalsavingb3
                        </td>
                    </tr>
                    <tr>
                        <td>
                            ไทยพสณิชย์
                        </td>
                        <td>
                            0.375
                        </td>
                        <td>
                            @ViewBag.Sterm
                        </td>
                        <td>
                            @ViewBag.Earlysavingb1
                        </td>
                        <td>
                            @ViewBag.Ratesavingb1
                        </td>
                        <td>
                            @ViewBag.Totalsavingb1
                        </td>
                    </tr>
                </tbody>
            </table>
            <hr />
        </a>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}