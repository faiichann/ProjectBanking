                                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="กรอกจำนวนเดือน">
                            </div>
                        </form>

                    </div>
                </div>
                <a href="#" class="btn-sec4">คำนวณ</a>

            </div>
        </div>
    </section>
